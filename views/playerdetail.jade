// Jade file to specify output of a persons list
// Inherits from layout
extend layout
block navbarcontent
  +nav-tabs-justified([{text:"Home",href:"/"},{text:"Team",href:"/team"},{text:"Player",href:"/searchplayer"},{text:"Other",href:"/others"},{text:"Maps",href:"/map"},{text:"tweets",href:"/tweets"}],-1)

block content
  .container
    p
      //select(name = "fullname")
      //  option #{login}
      div(align="center")    
        img.featurette-image.img-circle.center-block(src="images/player/"+"#{results.thisplayer[5]}"+".png",alt='Generic placeholder image', width = '130', height='150')
      +accordion-item-default("Player Profile","sample","true")
        div-align
        table(style="width:100%",border='0')
          tr
            th="Nation"
            td &nbsp;
            th="Fullname"
            td &nbsp;
            th="Number"
            td &nbsp;
            th="Position"
            td &nbsp;
            th="Club"
            td &nbsp;
            th="Club Country"
            td &nbsp;
            th="Birthday"
            td &nbsp;
          tr
            th= ""
              a(href="./teamDetail?name=" + results.thisplayer[2]) #{results.thisplayer[2]}
            td &nbsp;
            td=results.thisplayer[5]
            td &nbsp;
            td=results.thisplayer[3]
            td &nbsp;
            td=results.thisplayer[4]
            td &nbsp;
            td=results.thisplayer[6]
            td &nbsp;
            td=results.thisplayer[7]
            td &nbsp;
            td=results.thisplayer[8]

    +accordion-item-default("Other players you may be interested in:","sample","true")
      - var length = results.otherplayer.length
      - var s = Math.floor(Math.random()*length)
        div(align="center","width:30%")
          table(style="width:30%",border='0')
            - for (var inx = 0; inx < 2; inx++)
              tr
              td
              .col-sm-3
                  -if(results.otherplayer[(s+inx*4)%length]==results.thisplayer[5]){s++}
                  a(href="./player?fullname=" + results.otherplayer[(s+inx*4)%length]) #{results.otherplayer[(s+inx*4)%length]}
                    img.featurette-image.img-circle.center-block(src="images/player/"+"#{results.otherplayer[(s+inx*4)%length]}"+".png",alt='Generic placeholder image', width = '100', height='130')
              td
              .col-sm-3
                  -if(results.otherplayer[(s+1+inx*4)%length]==results.thisplayer[5]){s++}

                  a(href="./player?fullname=" + results.otherplayer[(s+1+inx*4)%length]) #{results.otherplayer[(s+1+inx*4)%length]}
                    img.featurette-image.img-circle.center-block(src="images/player/"+"#{results.otherplayer[(s+1+inx*4)%length]}"+".png",alt='Generic placeholder image', width = '100', height='130')
              td
              .col-sm-3
                  -if(results.otherplayer[(s+2+inx*4)%length]==results.thisplayer[5]){s++}

                  a(href="./player?fullname=" + results.otherplayer[(s+2+inx*4)%length]) #{results.otherplayer[(s+2+inx*4)%length]}
                    img.featurette-image.img-circle.center-block(src="images/player/"+"#{results.otherplayer[(s+2+inx*4)%length]}"+".png",alt='Generic placeholder image', width = '100', height='130')
              td
              .col-sm-3
                  -if(results.otherplayer[(s+3+inx*4)%length]==results.thisplayer[5]){s++}
                  a(href="./player?fullname=" + results.otherplayer[(s+3+inx*4)%length]) #{results.otherplayer[(s+3+inx*4)%length]}
                    img.featurette-image.img-circle.center-block(src="images/player/"+"#{results.otherplayer[(s+3+inx*4)%length]}"+".png",alt='Generic placeholder image', width = '100', height='130')

    form(method='get', action='/searchplayer')
        +submit-primary("Return")
